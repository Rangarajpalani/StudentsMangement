@page
@model StudentsMangement.Pages.Courzes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Courze</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Courze.Id" />
            <div class="form-group">
                <label asp-for="Courze.Course" class="control-label"></label>
                <input asp-for="Courze.Course" class="form-control" />
                <span asp-validation-for="Courze.Course" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Courze.Type" class="control-label"></label>
                <input asp-for="Courze.Type" class="form-control" />
                <span asp-validation-for="Courze.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Courze.Duration" class="control-label"></label>
                <input asp-for="Courze.Duration" class="form-control" />
                <span asp-validation-for="Courze.Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Courze.Fees" class="control-label"></label>
                <input asp-for="Courze.Fees" class="form-control" />
                <span asp-validation-for="Courze.Fees" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Courze.Description" class="control-label"></label>
                <textarea asp-for="Courze.Description" class="form-control"></textarea>
                <span asp-validation-for="Courze.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
