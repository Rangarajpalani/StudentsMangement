@using System.Collections;
@model StudentsMangement.Pages.Clazzes.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Clazz</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Clazz.Section)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Clazz.Section)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Clazz.StudentCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Clazz.StudentCount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Clazz.StaffCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Clazz.StaffCount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Clazz.Properties)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Clazz.Properties)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Clazz.Staffs)
        </dt>
        <dd class="col-sm-10">

            @foreach (var staff in Model.Clazz.Staffs)
            {
                var Staffs = new ArrayList();
                Staffs.Add(staff.Name);
                var staffs = String.Join(", ", Staffs.ToArray());
                @Html.DisplayFor(model =>staffs)
            }
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Clazz.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
