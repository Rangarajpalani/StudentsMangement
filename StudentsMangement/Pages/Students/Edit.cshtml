<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Student.Id" />
            <div class="form-group">
                <label asp-for="Student.Name" class="control-label"></label>
                <input asp-for="Student.Name" class="form-control" />
                <span asp-validation-for="Student.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.DOB" class="control-label"></label>
                <input asp-for="Student.DOB" class="form-control" />
                <span asp-validation-for="Student.DOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Degree" class="control-label"></label>
                <input asp-for="Student.Degree" class="form-control" />
                <span asp-validation-for="Student.Degree" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Address" class="control-label"></label>
                <textarea asp-for="Student.Address" class="form-control"></textarea>
                <span asp-validation-for="Student.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.PhoneNumber" class="control-label"></label>
                <input asp-for="Student.PhoneNumber" class="form-control" />
                <span asp-validation-for="Student.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.EmailAddress" class="control-label"></label>
                <input asp-for="Student.EmailAddress" class="form-control" />
                <span asp-validation-for="Student.EmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Clazzes" class="control-label"></label>
                <select asp-for="Student.Clazzes" class="form-control" asp-items="ViewBag.ClazzesId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Student.Courzes" class="control-label"></label>
                <select asp-for="Student.Courzes" class="form-control" asp-items="ViewBag.CourzesId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

